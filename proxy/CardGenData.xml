<?xml version="1.0" encoding="utf-8" ?>
<templates>
	<blocks>
		<block type="overlay" id="light" src="proxy/light.png">
			<location x="0" y="0" />
		</block>
		<block type="overlay" id="water" src="proxy/water.png">
			<location x="0" y="0" />
		</block>
		<block type="overlay" id="darkness" src="proxy/darkness.png">
			<location x="0" y="0" />
		</block>
		<block type="overlay" id="fire" src="proxy/fire.png">
			<location x="0" y="0" />
		</block>
		<block type="overlay" id="nature" src="proxy/nature.png">
			<location x="0" y="0" />
		</block>

		<block type="overlay" id="lightbox" src="proxy/lightbox.png">
			<location x="0" y="0" />
		</block>
		<block type="overlay" id="waterbox" src="proxy/waterbox.png">
			<location x="0" y="0" />
		</block>
		<block type="overlay" id="darknessbox" src="proxy/darknessbox.png">
			<location x="0" y="0" />
		</block>
		<block type="overlay" id="firebox" src="proxy/firebox.png">
			<location x="0" y="0" />
		</block>
		<block type="overlay" id="naturebox" src="proxy/naturebox.png">
			<location x="0" y="0" />
		</block>

		<block type="overlay" id="evo" src="proxy/evo.png">
			<location x="0" y="0" />
		</block>

	<block type="text" id="title">
			<location x="90" y="30" />
			<text color="#000000" size="30" />
			<border color="#000000" size="2" />
			<wordwrap height="25" width="270" align="center" shrinktofit="True" />
		</block>
		<block type="text" id="cost">
			<location x="20" y="20" />
			<text color="#FFFFFF" size="42" />
			<border color="#000000" size="4" />
			<wordwrap height="30" width="25" align="center" shrinktofit="True" />
		</block>
		<block type="text" id="race">
			<location x="90" y="55" />
			<text color="#000000" size="18" />
			<border color="#000000" size="1" />
			<wordwrap height="13" width="270" align="center" shrinktofit="True"/>
		</block>
		<block type="text" id="power">
			<location x="25" y="502" />
			<text color="#FFFFFF" size="60" />
			<border color="#000000" size="8" />
			<wordwrap height="28" width="90" align="near" shrinktofit="True" valign="center"/>
		</block>
		<block type="text" id="type">
			<location x="40" y="362" />
			<text color="#000000" size="20" />
			<border color="#000000" size="1" />
			<wordwrap height="10" width="125" align="near" shrinktofit="True"/>
		</block>
			<block type="text" id="rules">
			<location x="50" y="380" />
			<text color="#000000" size="20" />
			<border color="#000000" size="1" />
			<wordwrap height="100" width="305" align="near" shrinktofit="True"/>
		</block>
		<block type="text" id="rarity">
			<location x="271" y="336" />
			<text color="#000000" size="20" />
			<border color="#000000" size="1" />
			<wordwrap height="20" width="120" align="far" shrinktofit="True"/>
		</block>
	</blocks>
	<template src="proxy/light.png" default="True" >
		<matches>
			<match name="Civilization" value="Light"/>
		</matches>
		<overlayblocks>

			<conditional>
				<switch property="Civilization">
					<case value="Light"><link block="light" /></case>
					<case value="Water"><link block="water" /></case>
					<case value="Darkness"><link block="darkness" /></case>
					<case value="Fire"><link block="fire" /></case>
					<case value="Nature"><link block="nature" /></case>
					<case value="Light/Water"><link block="light" /></case>
					<case value="Water/Darkness"><link block="water" /></case>
					<case value="Darkness/Fire"><link block="darkness" /></case>
					<case value="Fire/Nature"><link block="fire" /></case>
					<case value="Light/Nature"><link block="light" /></case>
					<case value="Light/Fire"><link block="light" /></case>
					<case value="Water/Nature"><link block="water" /></case>
					<case value="Light/Darkness"><link block="light" /></case>
					<case value="Water/Fire"><link block="water" /></case>
					<case value="Darkness/Nature"><link block="darkness" /></case>
				</switch>
			</conditional>

			<artoverlay>
				<location x="0" y="0" />
				<size height="560" width="400" />
			</artoverlay>

			<conditional>
				<switch property="Civilization">
					<case value="Light"><link block="lightbox" /></case>
					<case value="Water"><link block="waterbox" /></case>
					<case value="Darkness"><link block="darknessbox" /></case>
					<case value="Fire"><link block="firebox" /></case>
					<case value="Nature"><link block="naturebox" /></case>
					<case value="Light/Water"><link block="lightbox" /></case>
					<case value="Water/Darkness"><link block="waterbox" /></case>
					<case value="Darkness/Fire"><link block="darknessbox" /></case>
					<case value="Fire/Nature"><link block="firebox" /></case>
					<case value="Light/Nature"><link block="lightbox" /></case>
					<case value="Light/Fire"><link block="lightbox" /></case>
					<case value="Water/Nature"><link block="waterbox" /></case>
					<case value="Light/Darkness"><link block="lightbox" /></case>
					<case value="Water/Fire"><link block="waterbox" /></case>
					<case value="Darkness/Nature"><link block="darknessbox" /></case>
				</switch>
			</conditional>

			<conditional>
				<if property="Type" value="Evolution Creature">
					<link block="evo" />
  				</if>
			</conditional>


		</overlayblocks>
		<textblocks>
			<link block="title"><property name="Name" /></link>
			<link block="race"><property name="Race" /></link>
			<link block="rules"><property name="Rules" /></link>
			<link block="type"><property name="Type" /></link>
			<link block="cost"><property name="Cost" /></link>
			<link block="power"><property name="Power" /></link>
			<link block="rarity"><property name="Rarity" /></link>
		</textblocks>
	</template>
</templates>
